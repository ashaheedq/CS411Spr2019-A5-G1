extends layout

block content
  table(border='0')
    tbody
      tr
        td
          form(method = 'GET' action = '/home')
            button.btn.btn-primary(type='submit') Home
        td
          form(method = 'GET' action = '/logout')
            button.btn.btn-primary(type='submit') Logout
        td
          form(method = 'GET' action = '/editProfile')
            button.btn.btn-primary(type='submit') Edit Profile
  
  p Welcome #{name}
  
  form(method = 'POST' action = '/getRecipes')
    label(for='ingredients') Enter ingredients separated by commas: 
    input#ingredients.form-control(type='text', name='ingredients')
    button.btn.btn-primary(type='submit') Submit