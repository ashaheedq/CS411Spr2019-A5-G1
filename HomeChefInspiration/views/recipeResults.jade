extends layout

block content
  table(border='0')
    tbody
      tr
        td
          form(method = 'GET' action = '/home')
            button.btn.btn-primary(type='submit') Home
        td
          form(method = 'GET' action = '/logout')
            button.btn.btn-primary(type='submit') Logout
        td
          form(method = 'GET' action = '/editProfile')
            button.btn.btn-primary(type='submit') Edit Profile
  p
    b Recipe Results:
  div
    table(style='width:100%', border='1')
        tbody
            tr 
                th Title
            each recipe in body.results
                tr 
                    td 
                        form(method = 'POST' action = '/viewRecipe')
                            button(type = "submit", value = recipe.id, name = "recButton", id = "recButton") #{recipe.title} 
